<script type="text/javascript" charset="utf-8">
  $(document).ready(function () {
    $('#housing').DataTable();
  });
</script>
<p id="alert notice alert-info"><%= notice %></p>

<h1 style="display: inline; vertical-align:middle">Housing Detail Management</h1>
<h4>Approve or Reject the requests submitted by your staff</h4>
<br>
<table id="housing" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="example_info" style="width: 100%;" cellspacing="0" width="100%">
  <thead>
  <tr>
    <th>Version</th>
    <th>Catgory no</th>
    <th>Status</th>
    <th>Created By</th>
    <th>Updated By</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @housing_details.each do |housing_detail| %>
      <tr>
        <td><%= housing_detail.version_id %></td>
        <td><%= housing_detail.category_id %></td>
        <td><%= housing_detail.status %></td>
        <td><%= housing_detail.createdby %></td>
        <td><%= housing_detail.updatedby %></td>
        <td><%= link_to 'Show', housing_detail %></td>
        <td > <%= button_to "Approve", {:controller => 'home', :action=> :btn_approve, :id => housing_detail.id } , remote: true %></td>
        <td > <%= button_to "Reject", {:controller => 'home', :action=> :btn_reject, :id => housing_detail.id } , remote: true %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>


