<script type="text/javascript" charset="utf-8">
  $(document).ready(function () {
    $('#example').DataTable();
  });
</script>
<p id="alert notice alert-info"><%= notice %></p>

<h1 style="display: inline; vertical-align:middle">Room Managements</h1>
<%= link_to 'New Room Management', new_room_management_path, class: "btn btn-default" %>
<br>
<table id="example" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="example_info" style="width: 100%;" cellspacing="0" width="100%">
  <thead>
  <tr>
    <th>Room no</th>
    <th>Category no</th>
    <th>Dorm</th>
    <th>Status</th>
    <th>Student</th>
    <th>Arrival date</th>
    <th>User</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @room_managements.each do |room_management| %>
      <tr>
        <td><%= room_management.room_no %></td>
        <td><%= room_management.category_no %></td>
        <td><%= room_management.dorm %></td>
        <td><%= room_management.status %></td>
        <td><%= room_management.student_id %></td>
        <td><%= room_management.arrival_date.strftime("%Y-%m-%d") %></td>
        <td><%= room_management.user.email %></td>
        <td><%= link_to 'Edit', edit_room_management_path(room_management) %></td>

        <!--<td><%# link_to 'Show', room_management %></td>-->
        <!--<td><%# link_to 'Edit', edit_room_management_path(room_management) %></td>-->
        <!--<td><%# link_to 'Destroy', room_management, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
  <% end %>
  </tbody>
</table>