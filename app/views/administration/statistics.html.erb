<div class="row container-fluid">
<h1 class="page-header">Dashboard</h1>
<div class="col-xs-6 col-md-3 col-sm-3 placeholder">
  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Column</th>
      <th>Count</th>
    </tr>
    </thead>

    <tbody>
    <tr>
      <td>All Users</td>
      <td><%= @user.count %></td>
    </tr>
    <tr>
      <td>All Roles</td>
      <td><%= @role.count %></td>
    </tr>
    </tbody>
  </table>
</div>

<div class="col-xs-6 col-md-9 col-sm-3 placeholder">
  <table class="table table-bordered">
    <thead>
    <tr>
      <% if @role.where(id:1)[0].present? %>
        <th>Total of <%= @role.where(id:1)[0].role %>s</th>
      <% end %>
      <% if @role.where(id:2)[0].present? %>
          <th>Total of <%= @role.where(id:2)[0].role %>s</th>
      <% end %>
      <% if @role.where(id:3)[0].present? %>
          <th>Total of <%= @role.where(id:3)[0].role %>s</th>
      <% end %>
      <% if @role.where(id:4)[0].present? %>
          <th>Total of <%= @role.where(id:4)[0].role %>s</th>
      <% end %>
    </tr>
    </thead>
    <tbody>
    <% if @role.where(id:1)[0].present? %>
        <tr>
          <td><%= @user.where(officer_role_id:1).count %></td>
    <% end %>
    <% if @role.where(id:2)[0].present? %>
          <td><%= @user.where(officer_role_id:2).count %></td>
    <% end %>
    <% if @role.where(id:3)[0].present? %>
          <td><%= @user.where(officer_role_id:3).count %></td>
    <% end %>
    <% if @role.where(id:4)[0].present? %>
          <td><%= @user.where(officer_role_id:4).count %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>
  <%= render partial:"administration/userlist", locals:{userlist:@user} %>
