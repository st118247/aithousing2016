<p id="notice"><%= notice %></p>

<h1>Room Histories</h1>

<table>
  <thead>
    <tr>
      <th>Category no</th>
      <th>Dorm</th>
      <th>Student</th>
      <th>Arrival date</th>
      <th>Leave date</th>
      <th>Allocated user</th>
      <th>Deallocated user</th>
      <th>Roommanagement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_histories.each do |room_history| %>
      <tr>
        <td><%= room_history.category_no %></td>
        <td><%= room_history.dorm %></td>
        <td><%= room_history.student_id %></td>
        <td><%= room_history.arrival_date %></td>
        <td><%= room_history.leave_date %></td>
        <td><%= room_history.allocated_user_id %></td>
        <td><%= room_history.deallocated_user_id %></td>
        <td><%= room_history.RoomManagement %></td>
        <td><%= link_to 'Show', room_history %></td>
        <td><%= link_to 'Edit', edit_room_history_path(room_history) %></td>
        <td><%= link_to 'Destroy', room_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

